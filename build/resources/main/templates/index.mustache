<!--
해당 머스테치에 URL 매핑 -> Controller 에서
-->
{{>layout/header}} <!--현재 머스테치 파일을 기준으로 다른 파일을 가져옴-->
<h1>스프링 부트로 시작하는 웹 서비스 Ver.2</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>

    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}} <!--posts 라는 List 를 순회(for)-->
            <tr>
                <td>{{id}}</td> <!--List 에서 뽑아낸 객체의 id 필드-->
                <td><a href="/posts/update/{{id}}">{{title}}</a></td> <!--List 에서 뽑아낸 객체의 title 필드-->
                <td>{{author}}</td> <!--List 에서 뽑아낸 객체의 author 필드-->
                <td>{{modifiedDate}}</td> <!--List 에서 뽑아낸 객체의 modifiedDate 필드-->
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>
{{>layout/footer}} <!--현재 머스테치 파일을 기준으로 다른 파일을 가져옴-->
